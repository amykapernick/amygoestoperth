---
permalink: "{% slug title %}/"
---
{% set pagetitle = title %}
{% set description = description %}
{% extends 'partials/layout.njk' %}

{% block head %}
	{% if external %}
		<meta rel="canonical" href="{{external}}"/>
	{% endif %}

	{% if draft %}
		<meta name="robots" content="noindex">
	{% endif %}

	<meta property="date" content="{{date}}"/>
{% endblock %}

{% block content %}

	<main class="main">
		<article class="article-content article content">
			<header>
				<h1>{{title}}</h1>
				<p class="article-intro">
					{% if publish %}
						Published <time class="date" datetime="{{publish}}">{{publish | readableDate}}</time>, Updated
					{% endif %}
					<time class="date" datetime="{{page.date}}">{{page.date | readableDate}}</time>
				</p>
			</header>
			<div>
				{{content | safe}}
			</div>
			<a class="back end" href="/">Back to Article Feed</a>
		</article>
	</main>

{% endblock %}